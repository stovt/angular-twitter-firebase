rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read;
      allow write: if request.auth.uid == request.resource.data.userId;
    }
    match /tweets/{tweetId} {
      allow read;
      allow create: if request.auth != null;
      allow update: if (
        request.auth != null && request.writeFields.size() == 1
        && ('childrenAmount' in request.writeFields
          && (
            request.resource.data.childrenAmount
            == (resource.data.childrenAmount + 1 || resource.data.childrenAmount - 1) 
          )
        ) || (
          'likes' in request.writeFields
          && (
            (
              request.auth.uid in request.resource.data.likes
              && request.resource.data.likes.size() == resource.data.likes.size() + 1
            ) || (
              !(request.auth.uid in request.resource.data.likes)
              && request.resource.data.likes.size() == resource.data.likes.size() - 1
            )
          )
        )
      );
      allow delete: if request.auth.uid == resource.data.user.userId;
    }
  }
}